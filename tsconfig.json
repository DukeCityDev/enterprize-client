{
  "compilerOptions": {
    "lib": ["es5", "es6","dom"],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "jsx": "react",
    "baseUrl": ".",
    //for sequelize integration
    "experimentalDecorators": true,
    //for sequelize integration
    "emitDecoratorMetadata": true,
    "paths": {
      //      "*": [
      //       // "node_modules/*",
      //        //"src/types/*"
      //      ]
    }
  },
  "include": [
    "src/**/*",
    "/*",
    "app.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "/node_modules/**/*",
    "@types",
    "@types/jest",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "client"
  ]
}
